include "../include/sllist.spl";

procedure remove(lst: Node) 
  returns (res: Node)
  requires lseg(lst, null)
  ensures lseg(res, null)
{
  if (lst == null)
    return null;
  else {
    var nondet: Bool;
    var curr := lst;
    while (nondet && curr.next != null) 
    {
      havoc nondet;
      curr := curr.next;
    }
    
    var tmp := curr.next;
    if (tmp != null) {
      curr.next := tmp.next;
      free(tmp);
    }
    return lst;
  }
}
